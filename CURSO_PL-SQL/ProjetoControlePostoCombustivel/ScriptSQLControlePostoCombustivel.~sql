CREATE TABLE COMBUSTIVELCURSO(
  CD_COMBUSTIVEL NUMBER(10),
  DS_COMBUSTIVEL VARCHAR(60),
  DT_RECORD  DATE,
  DT_REFRESH DATE,
  CONSTRAINT PKCOMBUSTIVELCURSO PRIMARY KEY (CD_COMBUSTIVEL)
);

SELECT * FROM COMBUSTIVELCURSO;

CREATE TABLE PROPRIETARIOCURSO(
  CD_PROPRIETARIO NUMBER(10),
  NM_PROPRIETARIO VARCHAR2(100),
  NR_CNPJCPF      VARCHAR2(14),
  DS_ENDERECO     VARCHAR2(200),
  NR_TELEFONE     NUMBER(11),
  DT_RECORD       DATE,
  DT_REFRESH      DATE,
  CONSTRAINT PKPROPRIETARIOCURSO PRIMARY KEY (CD_PROPRIETARIO)
);

SELECT * FROM PROPRIETARIOCURSO;

CREATE TABLE VEICULOCURSO(
  NR_PLACA        VARCHAR2(7),
  CD_COMBUSTIVEL  NUMBER(10),
  CD_PROPRIETARIO NUMBER(10),
  KM_ATUAL        NUMBER(10),
  DT_RECORD       DATE,
  DT_REFRESH      DATE,
  CONSTRAINT PKVEICULOCURSO PRIMARY KEY (NR_PLACA),
  CONSTRAINT RVEICULO_COMBUSTIVELCURSO FOREIGN KEY (CD_COMBUSTIVEL)
             REFERENCES COMBUSTIVELCURSO(CD_COMBUSTIVEL),
  CONSTRAINT RVEICULO_PROPRIETARIOCURSO FOREIGN KEY (CD_PROPRIETARIO)
             REFERENCES PROPRIETARIOCURSO(CD_PROPRIETARIO)         
);

SELECT * FROM VEICULOCURSO;

CREATE TABLE FRENTISTACURSO(
  CD_FRENTISTA NUMBER(10),
  NM_FRENTISTA VARCHAR2(100),
  PC_COMISSAO  NUMBER(4,2),
  DT_RECORD    DATE,
  DT_REFRESH   DATE,
  CONSTRAINT PKFRENTISTACURSO PRIMARY KEY (CD_FRENTISTA)
);

SELECT * FROM FRENTISTACURSO;

CREATE TABLE ABASTECIMENTOCURSO(
 CD_ABASTECIMENTO NUMBER(15),
 NR_PLACA         VARCHAR2(7),
 CD_FRENTISTA     NUMBER(10),
 QT_ABASTECIDA    NUMBER(6,3),
 KM_ABASTECIMENTO NUMBER(10),
 VL_COMBUSTIVEL   NUMBER(15,2),
 DT_RECORD        DATE,
 DT_REFRESH       DATE,
 CONSTRAINT PKABASTECIMENTOCURSO PRIMARY KEY (CD_ABASTECIMENTO),
 CONSTRAINT RABASTECIMENTO_VEICULOCURSO FOREIGN KEY (NR_PLACA)
            REFERENCES VEICULOCURSO(NR_PLACA),
 CONSTRAINT RABASTECIMENTO_FRENTISTACURSO FOREIGN KEY (CD_FRENTISTA)
            REFERENCES FRENTISTACURSO(CD_FRENTISTA)           
);

SELECT * FROM ABASTECIMENTOCURSO;

COMMIT;
